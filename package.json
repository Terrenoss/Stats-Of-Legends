{
  "name": "lol-builder",
  "version": "0.1.0",
  "private": true,
  "description": "MVP builder for League-like builds (champions, runes, items) - Next.js 14 + TypeScript",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build",
    "start": "cd frontend && npm run start",
    "test": "jest --runInBand",
    "dd:update": "node scripts/fetch-ddragon.js && node scripts/copy-dd-to-public.js",
    "dev:legacy": "next dev",
    "build:legacy": "next build",
    "start:legacy": "next start"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@tanstack/react-query": "4.35.0",
    "autoprefixer": "10.4.16",
    "immer": "10.0.2",
    "next": "14.0.0",
    "postcss": "8.4.31",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwindcss": "3.4.13",
    "zustand": "4.5.2",
    "@google/genai": "^1.30.0"
  },
  "devDependencies": {
    "@types/jest": "29.5.12",
    "@types/node": "20.11.30",
    "@types/react": "18.3.11",
    "@types/react-dom": "18.3.1",
    "babel-jest": "29.7.0",
    "jest": "29.7.0",
    "ts-jest": "29.1.1",
    "typescript": "5.5.4"
  }
}
